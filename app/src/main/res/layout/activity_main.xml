<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#282827">

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="222dp"
        android:layout_height="238dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="94dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/icono" />

    <EditText
        android:id="@+id/editText_UsuarioLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="93dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/usuario"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#F54280" />

    <EditText
        android:id="@+id/editText_PasswordLogin"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_UsuarioLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="92dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#ABDFF6" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_PasswordLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/button_rounded"
        android:text="@string/login" />

    <Button
        android:id="@+id/button_registrar"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/button_rounded_border"
        android:text="@string/registrarse" />

    <TextView
        android:id="@+id/text_forgotenPass"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_registrar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="96dp"
        android:text="@string/olvido_contraseña"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />


</RelativeLayout>
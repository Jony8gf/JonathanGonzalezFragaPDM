<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282827">

    <TextView
        android:id="@+id/textView_ElegirImageStorage"
        android:layout_width="412dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="0dp"
        android:background="@color/pink_safe"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#FFFFFF"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/imageButton_Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="217dp"
        android:contentDescription="@string/camara"
        android:onClick="camera"
        app:srcCompat="@drawable/camara" />

    <ImageButton
        android:id="@+id/imageButton_Storage"
        android:layout_width="149dp"
        android:layout_height="144dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/imagen"
        android:onClick="seleccionImagenes"
        app:srcCompat="@drawable/previo" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2_Muestrame"
    android:background="#282827">

    <Button
        android:id="@+id/button_ContinuarMuestrame"
        android:layout_width="259dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="10dp"
        android:onClick="PasarImagenesDePerfil"
        android:text="@string/continuar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="162dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="432dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="106dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Busco"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:background="@color/pink_safe"
                android:text="@string/busco"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/radioGroup_Busco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton_BuscoRelacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:onClick="seleccion"
                    android:text="@string/busco_relacion"
                    android:textColor="#F3030B"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButton2radioButton_BuscoNoche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:onClick="seleccion"
                    android:text="@string/busco_noche"
                    android:textColor="#6A1B9A"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButton_BuscoAmistad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:onClick="seleccion"
                    android:text="@string/busco_amistad"
                    android:textColor="#69F803"
                    android:textSize="24sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView_Muestrame"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:background="@color/pink_safe"
                android:text="@string/muestrame"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioGroup_Muestrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton_MuestremeMujeres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:onClick="seleccion"
                        android:text="@string/mujeres"
                        android:textColor="@color/pink"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/radioButton_MuestremeHombres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:onClick="seleccion"
                        android:text="@string/hombes"
                        android:textColor="@color/teal_200"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/radioButton_MuestremeAmobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:onClick="seleccion"
                        android:text="@string/ambos"
                        android:textColor="#E9EF0C"
                        android:textColorHighlight="#E9EF0C"
                        android:textSize="24sp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
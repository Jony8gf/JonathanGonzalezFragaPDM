<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282827"
    tools:context=".MainActivity_NoConexionInternet">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_notInternet"
        android:layout_width="366dp"
        android:layout_height="412dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/not_internet" />

    <Button
        android:id="@+id/buttonReintentarInternet"
        android:layout_width="181dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:onClick="Reconectar"
        android:text="@string/reintentar_internet"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewAyudaInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/redondear_textview"
        android:text="@string/help_internet"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />


</RelativeLayout>